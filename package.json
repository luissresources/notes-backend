  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env NODE_ENV=development nodemon ./index.js",
    "test": "cross-env NODE_ENV=test jest --verbose",
    "build:ui": "rm -rf build && rm -rf ../notes-frontend/build && cd ../notes-frontend && npm run build --prod && cp -r build ../notes-backend",
    "deploy": "git push heroku main",
    "deploy:full": "npm run build:ui && cd ../notes-backend && git add . && git commit -m uibuild && npm run deploy",
    "logs:prod": "heroku logs --tail",
    "lint": "eslint ."
  },
